{
  "productName": "kanji",
  "version": "4.12.1",
  "identifier": "tsukilabs.kanji",
  "build": {
    "beforeDevCommand": "pnpm run vite:dev",
    "beforeBuildCommand": "pnpm run vite:build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "removeUnusedCommands": true
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPCACHE/**",
          "$APPCONFIG/**",
          "$APPDATA/**"
        ]
      },
      "csp": {
        "default-src": "'self'",
        "connect-src": "ipc: http://ipc.localhost",
        "img-src": "* blob:",
        "style-src": "'self' 'unsafe-inline'"
      }
    }
  },
  "bundle": {
    "publisher": "Tsukilabs",
    "shortDescription": "Kanji frequency in text files",
    "license": "GPL-3.0-only",
    "licenseFile": "../LICENSE",
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZGRkYxMTA0RUJBNjY0NTEKUldSUlpLYnJCQkgvYnpuMW9ocVllczEzRXZ0V0lMY3RSb0x6S0RwazAzWUsxUXVBTHNkSkgyL3QK",
      "endpoints": [
        "https://github.com/ferreira-tb/kanji/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
