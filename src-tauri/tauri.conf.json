{
  "productName": "kanji-frequency",
  "version": "2.2.0",
  "identifier": "tsukilabs.kanji-frequency",
  "build": {
    "beforeDevCommand": "pnpm run vite:dev",
    "beforeBuildCommand": "pnpm run vite:build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "removeUnusedCommands": true
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPCACHE/**", "$APPCONFIG/**", "$APPDATA/**"]
      },
      "csp": {
        "default-src": "'self'",
        "connect-src": "ipc: http://ipc.localhost",
        "img-src": "* blob:",
        "style-src": "'self' 'unsafe-inline'"
      }
    }
  },
  "bundle": {
    "publisher": "Tsukilabs",
    "shortDescription": "Kanji frequency in text files",
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
